  <link rel="stylesheet" href="/assets/style.css">
  <link rel="stylesheet" href="/book/styles.css">
  <script defer src="/assets/script.js"></script>
  <script defer src="/book/scripts.js"></script>
</head>
<body>
  <div class="container">
    <h1>{{ chapter.title }}</h1>
    
