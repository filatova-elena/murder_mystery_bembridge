    <div class="nav-footer">
      <a href="/book/index.html" class="button nav-button">← Book Index</a>
      <a href="/" class="button nav-button">Return to Investigation</a>
    </div>
  </div>

  <script>
    // Data from template (must be inline)
    const entries = {{ chapter.entries | dump | safe }};
    const prevChapter = {{ chapter.prevSlug | dump | safe }};
    const nextChapter = {{ chapter.nextSlug | dump | safe }};
  </script>
</body>
</html>
